<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Modules.WireSeq"
    android:showDividers="beginning|middle|end">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red Wires:"
        android:id="@+id/redText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue Wires:"
        android:id="@+id/blueText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Black Wires:"
        android:id="@+id/blackText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/redOcc"
        android:layout_below="@+id/redOccText"
        android:layout_alignLeft="@+id/redOccText"
        android:layout_alignStart="@+id/redOccText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occurrence:"
        android:id="@+id/redOccText"
        android:layout_below="@+id/redText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cut if\nconnected to:"
        android:id="@+id/redCutIf"
        android:layout_below="@+id/redOcc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wireSeq_redToCut"
        android:id="@+id/redToCut"
        android:layout_below="@+id/redCutIf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occurrence:"
        android:id="@+id/blueOccText"
        android:layout_below="@+id/blueText"
        android:layout_alignLeft="@+id/blueText"
        android:layout_alignStart="@+id/blueText" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/blueOcc"
        android:layout_below="@+id/blueOccText"
        android:layout_alignLeft="@+id/blueOccText"
        android:layout_alignStart="@+id/blueOccText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cut if\nconnected to:"
        android:id="@+id/blueCutIf"
        android:layout_alignTop="@+id/redCutIf"
        android:layout_alignLeft="@+id/blueOcc"
        android:layout_alignStart="@+id/blueOcc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wireSeq_blueToCut"
        android:id="@+id/blueToCut"
        android:layout_below="@+id/blueCutIf"
        android:layout_alignLeft="@+id/blueCutIf"
        android:layout_alignStart="@+id/blueCutIf" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occurrence:"
        android:id="@+id/blackOccText"
        android:layout_below="@+id/blackText"
        android:layout_alignLeft="@+id/blackText"
        android:layout_alignStart="@+id/blackText" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/blackOcc"
        android:layout_below="@+id/blackOccText"
        android:layout_alignLeft="@+id/blackText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cut if\nconnected to:"
        android:id="@+id/blackCutIf"
        android:layout_below="@+id/blackOcc"
        android:layout_alignLeft="@+id/blackText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wireSeq_blackToCut"
        android:id="@+id/blackToCut"
        android:layout_below="@+id/blackCutIf"
        android:layout_alignLeft="@+id/blackText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Cuts"
        android:id="@+id/updateCuts"
        android:layout_below="@+id/blueToCut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="getCuts" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Module"
        android:id="@+id/restartButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="restartClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="different module"
        android:id="@+id/goBack"
        android:layout_alignBottom="@+id/restartButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="differentClick" />

</RelativeLayout>
