            android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bomb Specific:"
        android:id="@+id/modSpecific"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parallel Port?"
        android:id="@+id/hasParallel"
        android:layout_below="@+id/modSpecific"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="false"
        android:onClick="updateCut" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 or more batteries?"
                android:id="@+id/numBats"
                android:layout_below="@+id/hasParallel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="updateCut" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is last digit of serial even?"
                android:id="@+id/serialDigit"
                android:layout_below="@+id/numBats"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Wire:"
        android:id="@+id/wire1"
                android:textIsSelectable="false"
        android:textSize="20dp"
                android:layout_below="@+id/serialDigit"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

