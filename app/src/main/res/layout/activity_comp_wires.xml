        android:layout_below="@+id/wire3"
        android:layout_alignParentLeft="true"
        android:onClick="updateCut" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has Blue?"
        android:id="@+id/hasBlue_3"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hasRed_3"
        android:layout_alignParentLeft="true"
        android:onClick="updateCut" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has Star?"
        android:id="@+id/hasStar_3"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hasBlue_3"
        android:layout_alignParentLeft="true"
        android:onClick="updateCut" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
