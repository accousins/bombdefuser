<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Modules.Needy.Knob">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn the knob to:"
        android:id="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/knobPos"
        android:textSize="20dp"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/led_1"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/led_2"
        android:layout_toStartOf="@+id/led_2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/led_2"
        android:layout_alignTop="@+id/led_3"
        android:layout_toLeftOf="@+id/led_3"
        android:layout_toStartOf="@+id/led_3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/led_3"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/knobPos"
        android:layout_alignEnd="@+id/knobPos" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/led_4"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/led_3"
        android:layout_toEndOf="@+id/led_3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/led_5"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/led_4"
        android:layout_toEndOf="@+id/led_4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/led_6"
        android:layout_alignTop="@+id/led_5"
        android:layout_toRightOf="@+id/led_5"
        android:layout_toEndOf="@+id/led_5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED On/Off Grid"
        android:id="@+id/textView15"
        android:layout_above="@+id/led_1"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/led_7"
        android:layout_below="@+id/led_1"
        android:layout_alignLeft="@+id/led_1"
        android:layout_alignStart="@+id/led_1" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/led_8"
        android:layout_below="@+id/led_1"
        android:layout_toRightOf="@+id/led_1"
        android:layout_toEndOf="@+id/led_1" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/led_9"
        android:layout_alignTop="@+id/led_8"
        android:layout_toRightOf="@+id/led_8"
        android:layout_toEndOf="@+id/led_8" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/led_10"
        android:layout_below="@+id/led_3"
        android:layout_toRightOf="@+id/led_3"
        android:layout_toEndOf="@+id/led_3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/led_11"
        android:layout_alignTop="@+id/led_10"
        android:layout_alignLeft="@+id/led_5"
        android:layout_alignStart="@+id/led_5" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/led_11"
        android:layout_toRightOf="@+id/led_11"
        android:layout_toEndOf="@+id/led_11"
        android:id="@+id/led_12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="differnt module"
        android:id="@+id/button8"
        android:onClick="differentClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="restart module"
        android:id="@+id/button9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="restartClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get correct position"
        android:id="@+id/button11"
        android:layout_below="@+id/led_8"
        android:layout_centerHorizontal="true"
        android:onClick="getPos" />
</RelativeLayout>
